-- üêº Panda V3 Setup f√ºr neobloxdehub

-- == KONFIGURATION ==
local __PELINDA_SERVICE__ = "neobloxdehub"
local __PELINDA_SILENTMODE__ = true
local __PELINDA_SECURITY_LEVEL__ = 2 -- 1 = Warnung, 2 = Kick, 3 = Crash

-- == KEY-LINK GENERIEREN ==
local keyLink = Pelinda.GetKeyLink({ Service = neobloxdehub })
print("üîë Hol dir deinen Key hier: " .. keyLink)
pcall(function() setclipboard(keyLink) end)

-- == GUI zur Key-Eingabe ==
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
local TextBox = Instance.new("TextBox", ScreenGui)
TextBox.Size = UDim2.new(0, 300, 0, 50)
TextBox.Position = UDim2.new(0.5, -150, 0.5, -25)
TextBox.PlaceholderText = "üîê Gib deinen Panda V3 Key ein"
TextBox.TextScaled = true
TextBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TextBox.TextColor3 = Color3.fromRGB(255, 255, 255)

-- == VALIDIERUNG ==
TextBox.FocusLost:Connect(function()
    local userKey = TextBox.Text
    if userKey == "" then
        TextBox.Text = "‚ùó Bitte gib deinen Key ein!"
        return
    end

    local status = Pelinda.Init({
        Service = __PELINDA_SERVICE__,
        SilentMode = __PELINDA_SILENTMODE__,
        Key = userKey,
        SecurityLevel = __PELINDA_SECURITY_LEVEL__
    })

    print("[+] PandaV3 Status: " .. status)

    if status == "validated!!" then
        print("‚úÖ neobloxdehub erfolgreich geladen!")
        TextBox:Destroy()
        ScreenGui:Destroy()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/NovaDE-script/Arsenal1/refs/heads/main/Arsenal%20Premium.lua"))()
    else
        TextBox.Text = "‚ùå Ung√ºltiger Key: " .. status
        print("‚ùå PandaV3 Fehler: " .. status)
    end
end)
